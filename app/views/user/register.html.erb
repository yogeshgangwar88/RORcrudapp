


  <section class="vh-100" >
    <div >
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
  
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
  <%= render partial:"shared/flash"  %>
<% if @usr.errors.full_messages.any? %>
<div class="alert alert-warning" role="alert"> 
  <% @usr.errors.full_messages.each do |error_message| %>
    <%= error_message %>  <br />
  <% end %>
  </div>
<% end %>

                  <%= form_with model:@usr, url:"/registeruser",remote:true, method: :post do |form| %>
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                      <%= form.label :name,"Name", class:"form-label"  %>
                        <%= form.text_field :username,class:"form-control"  %>
                        
                        
                      </div>
                    </div>
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                      <%= form.label :email, "Email",class:"form-label"  %>
                      <%= form.text_field :email,class:"form-control"  %>
                        
                        
                      </div>
                    </div>
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                       <%= form.label :password,"Password" , class:"form-label" %>
                      <%= form.password_field :password,class:"form-control" %>
                     
                     
                      </div>
                    </div>
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                      <%= form.label :password,"Repeat your password" , class:"form-label" %>
                       <%= form.password_field :password_confirmation,class:"form-control" %>
                      
                      
                      </div>
                    </div>
  
                    <div class="form-check d-flex justify-content-center mb-5">
                      <%= form.check_box :agreement,class:"form-check-input me-2"  %>
                      

                      
                      <label class="form-check-label" for="form2Example3c">
                        I agree all statements in <a href="#!">Terms of service</a>
                      </label>
                    </div>
  
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">

                    <%= link_to "Back to login", signin_path, {:style=>'margin-right: 148px;',:class=> "btn btn-danger"} %>



                    <%= form.submit "Register", :class=>"btn btn-primary"  %>
                    
                     
                    </div>
  
                  <% end %>
  
                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
  
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                    class="img-fluid" alt="Sample image">
  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  

